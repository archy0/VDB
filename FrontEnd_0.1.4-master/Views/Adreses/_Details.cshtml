@model FrontEnd.Models.Arg_Adrese

<div>

    <table class="ui celled table">
        <tr>
            <th>Adrese:</th>
            <td data-label="">@Model.STD</td>
        </tr>
        <tr>
            <th>Vēsturiskie nosaukumi:</th>
