@{ ViewData["Title"] = "Adrešu reģistrs"; }


<table class="ui collapsing table">
    <thead>
        <tr>
            <td>Novadi un rep. nozīmes pilsētas</td>
            <td class="pilsetasClass">Pilsētas, pagasti</td>
            <td>Adreses veids</td>
            <td>Adreses statuss</td>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>
                <div class="custom-select">
                    <select class="selection-filter" id="novadiID">
                        <option class="defaultOption" value=""> Izvēlies adm. vienību!</option>
                        @{ foreach (var obj in ViewBag.novadi)
                            {
                                <option value='@obj.adR_CD'>@obj.std</option>
                            } }
                    </select>
                </div>
            </td>


            <td id="ter3_rnd" class="pilsetasClass">
                <div class="custom-select">
                        <select class="selection-filter" id="pagastiID">
                            <option class="defaultOption" value="">Izvēlies pagastu!</option>
                        </select>
                </div>
            </td>

            <td>
                <div class="custom-select">
                    <select class="selection-filter" id="veidiID">
                        <option class="defaultOption" value="">Izvēlies veidu!</option>
                        @{
                            foreach (var obj in ViewBag.adrVeidi) {
                                <option value='@obj.kods'>@obj.nosaukums</option>
                            }
                         }
                    </select>
                </div>
            </td>

            <td>
                <div class="custom-select">
                    <select class="selection filter" id="statusiID">
                        <option class="defaultOption" value="">Izvēlies statusu!</option>
                        @{ foreach (var obj in ViewBag.statusi)
                            {
                                <option value='@obj.chaR3'>@obj.nosaukums</option>
                            } }
                    </select>
                </div>
            </td>
        </tr>
    </tbody>
</table>

<table class="ui collapsing table">
    <thead>
        <tr>
            <td>Adreses nosaukuma daļa</td>
            <td>Meklēt pēc adreses ID</td>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>
                <div class="ui input">
                    <input type="text" id="nosauk_dala" name="nosauk_dala" size="20" maxlength="20" value="">
                </div>
            </td>

            <td>
                <div class="ui input">
                    <input type="text" id="adr_ID" name="adr_ID" size="20" maxlength="9" value="">
                </div>
            </td>

        </tr>
    </tbody>
</table>

<br>
<br>

