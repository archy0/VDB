<button type="button" id="atlasit" class="ui button">Parādīt rezultātus</button>

<button class="ui button" id="attir">Attīrīt</button>

<div id="objSkaits"><br></div>

<div id="dati">
    <table id="rezultatiTable" class="ui celled striped selectable table">
        <tbody id="rezultati">
        </tbody>
    </table>
    <div id="pagingButtons">
        <button class="ui button" id="firstPage">&lt;&lt;</button>
        <button class="ui button" id="prevPage">&lt;</button>
        <button class="ui button indexed" id="1" value="1">1</button>
        <button class="ui button indexed" id="2" value="2">2</button>
        <button class="ui button indexed" id="3" value="3">3</button>
        <button class="ui button indexed" id="4" value="4">4</button>
        <button class="ui button indexed" id="5" value="5">5</button>
        <button class="ui button" id="nextPage">&gt;</button>
        <button class="ui button" id="lastPage">&gt;&gt;</button>
    </div>
</div>

